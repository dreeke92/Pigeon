
<div class="container">
  <h3>NGOs & charities overview</h3>
  <p>Search charity:</p>
  <div class="search-input">This is gonna be a search div</div>
  <br>
  <p>Filter on:</p>

  <div class="card-container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="filter-item">NGO/charity</div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="filter-item">Type</div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="filter-item">Geography</div>
      </div>
    </div>
  </div>

  <div class="card-container">
    <div class="row">
      <% @charities.each do |charity| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <%= cl_image_path charity.photo, height: 300, width: 400, crop: :fill %>

          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
