
<div class="new-charity-container">
  <h2>Create charity</h2><br>
  <%= simple_form_for(@charity) do |f| %>
    <%= f.input :name, label: 'Name of the charity', error: 'Name is mandatory, please specify one' %>
    <%= f.input :description, label: 'Description of the charity' %>
    <%= f.input :website_url, label: 'Website URL' %>
    <%= f.input :email, label: 'Contact email' %>
    <%= f.input :category, label: 'Type of charity', collection: ["Option 1", "Option 2", "Option 3"] %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <div class="new-charity-center-text">
      <%= f.button :submit, class: "pigeon-button-blue new-charity-button-large" %>
    </div>
  <% end %>
</div>
