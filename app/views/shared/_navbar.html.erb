<div class="pigeon-container-nav">
  <div class="container">
    <div class="topnav">
      <div class="creditnav">
        <i class="fas fa-hand-holding-heart navbar-item"></i>
        <div class="credits-display">1,500</div>
      </div>

      <div class="navbar-avatar">
        <% unless current_user.nil? %>
          <%= link_to user_path(current_user) do %>
            <% if current_user.nil? %>
              <%= image_tag 'http://www.travelcontinuously.com/wp-content/uploads/2018/04/empty-avatar.png',class: "avatar" %>
            <% elsif current_user.photo.blank? %>
              <%= image_tag 'http://www.travelcontinuously.com/wp-content/uploads/2018/04/empty-avatar.png',class: "avatar" %>
            <% else %>
              <%= cl_image_tag current_user.photo, crop: :fill, class: "avatar" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="notification-menu navbar-wagon-item">
        <div class="dropdown">
          <i class="far fa-bell navbar-item"></i>
        </div>
        <div class="dropdown">
          <i class="fas fa-bars navbar-item dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to posts_path do %>
                <div>Dashboard</div>
              <% end %>
            </li>
            <li>
              <%= link_to settings_users_path do %>
                <div>Settings</div>
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            <% else %>
              <li><a href="#">Log in</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>



